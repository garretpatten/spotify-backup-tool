{
  "name": "spotify-backup-tool",
  "version": "1.0.0",
  "description": "A comprehensive tool that uses the Spotify API to backup profile and playlist data with zip compression and testing.",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "backup": "node src/index.js",
    "auth": "node src/auth/index.js",
    "auth:test": "node src/auth/index.js --test",
    "setup": "node setup.js",
    "setup:auth": "npm run auth",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garretpatten/spotify-backup-tool.git"
  },
  "keywords": ["spotify", "backup", "playlist", "music", "api"],
  "author": "Garret Patten",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/garretpatten/spotify-backup-tool/issues"
  },
  "homepage": "https://github.com/garretpatten/spotify-backup-tool#readme",
  "dependencies": {
    "dotenv": "^16.5.0",
    "fs-extra": "^11.3.0",
    "spotify-web-api-node": "^5.0.2",
    "archiver": "^7.0.1",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
